# Backend Services Environment Variables
# Copy this file to .env and modify as needed

# Web-API Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (for web-api)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=web_systems_db

# Django SSR Configuration
DJANGO_PORT=8000
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here

# External API Configuration (for Django)
EXTERNAL_API_BASE_URL=http://localhost:3000/api
EXTERNAL_API_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
